
<!DOCTYPE html>
<html>
<head>
	<title>时间</title>
	<meta charset="utf-8">
	<style type="text/css">
	*{
		margin: 20px 0px 20px 10px;

	}
	</style>
</head>
<body>
	<div>
		<p>系统当前时间</p>
		<p>页面停留时间</p>


		<form>
			请输入单个字符<input type="text" name="" value="">
			<input type="button" name=" " value="执行" onclick="on()" >
		</form>
		<p>你输入的字符是" " 它的ASCII码值是" "</p>
	</div>
	<script type="text/javascript">
		// var newdate = new Date();
		// console.dir(newdate)
		var agedate =new Date();
		// var agedate = newdate.getTime() ;
		var arr = document.getElementsByTagName('p');

		var x= setInterval(newtime,1000);
		function newtime(){
			var newdate = new Date();
			var x = newdate.getMonth();
			var y = newdate.getFullYear();
			var z = newdate.getDate();
			var h = newdate.getHours();
			var m = newdate.getMinutes();
			var s = newdate.getSeconds();
			// console.dir(document.getElementsByTagName('div')[0].children);
			
			arr[0].innerText = "系统当前时间:"+y+"-"+x+"-"+z+" "+h+":"+m+":"+s

			var tingliudate = newdate - agedate;
			console.dir(agedate);
			

			var a = Math.floor(tingliudate/(1000*60*60));
			// console.dir(a);
			var b = Math.floor(tingliudate/(1000*60));
			// console.dir(b);
			var c = Math.floor((tingliudate%(1000*60))/1000)
			// console.dir(c);
			// var b = tingliudate.getMinutes();
			// var c = tingliudate.getSeconds();
			

			arr[1].innerText = "页面停留时间:"+a+"小时"+b+"分"+c+"秒"
		}

		function on(){
			var inputs = document.getElementsByTagName('input');
			console.dir(event);
			console.dir(inputs[0].value);
			var x = inputs[0].value;
			var y = x.charCodeAt();
			console.dir(y);
			arr[2].innerText = '你输入的字符是: '+x+' 它的ASCII码值是:'+y;
		}
	
	</script>
</body>
</html>
